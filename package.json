{
  "name": "blog",
  "private": true,
  "workspaces": [
    "./",
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "turbo-build": "turbo run build",
    "turbo-dev": "turbo run dev --parallel",
    "turbo-lint": "turbo run lint",
    "format": "prettier --write '**/*.{ts,tsx,.md}'"
  },
  "dependencies": {
    "http-status-codes": "^2.1.4",
    "next": "12.0.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.3.1",
    "ui": "*",
    "oracledb": "*",
    "apollo-graphql-server": "*"
  },
  "devDependencies": {
    "next-transpile-modules": "9.0.0",
    "@types/http-status-codes": "^1.2.0",
    "@types/node": "16.11.10",
    "@types/react": "17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "eslint": "7",
    "eslint-config-next": "12.0.4",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.4.1",
    "turbo": "latest",
    "typescript": "4.5.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": [".next/**"]
      },
      "test": {
        "dependsOn": ["^build"],
        "outputs": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  }
}
